@model TechCorp.ContentHub.API.ViewModels.AuthorListingViewModel
@{
    ViewData["Title"] = "Authors";
}

<div class="authors-listing">
    <header class="page-header">
        <h1>Our Authors</h1>
        <p>@Model.TotalAuthors contributors</p>
    </header>

    <div class="authors-grid">
        @foreach (var author in Model.Authors)
        {
            <div class="author-card">
                <a asp-controller="Authors" asp-action="Profile" asp-route-slug="@author.Id">
                    @if (!string.IsNullOrEmpty(author.ProfileImage))
                    {
                        <img src="@author.ProfileImage" alt="@author.Name" class="author-image" />
                    }
                    <h2>@author.Name</h2>
                    @if (!string.IsNullOrEmpty(author.Title))
                    {
                        <p class="author-title">@author.Title</p>
                    }
                    <p class="author-bio">@author.Bio</p>
                </a>
            </div>
        }
    </div>
</div>
